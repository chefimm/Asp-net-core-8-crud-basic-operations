@model IEnumerable<Library.Models.Author>
@{
    
}
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Author/Add">Daha fazla ekle</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Yazarlar</h3>
            <table class="table table-stripped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Yazarİsim</th>
                        <th>Eylem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AuthorName</td>
                            <td>
                                <a class="btn btn-success" href="/Author/Update?id=@item.Id">Düzenle</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Emin misin?')" href="/Author/Delete?id=@item.Id">Sil</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
